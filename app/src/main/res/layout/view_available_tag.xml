<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/available_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/list_item_medium_margin"
        android:layout_marginLeft="@dimen/list_item_small_margin"
        android:layout_marginRight="@dimen/list_item_small_margin"
        android:layout_marginBottom="@dimen/list_item_small_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="My Key" />

    <TextView
        android:id="@+id/available_tag_mac_address"
        android:layout_below="@+id/tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_small_margin"
        android:layout_marginRight="@dimen/list_item_small_margin"
        android:layout_marginBottom="@dimen/list_item_small_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textAllCaps="true"
        android:text="O4:56:FF:9A:A1" />

</LinearLayout>